<h1>Currency Units</h1>
<div>
  <%= link_to 'New Currency Unit', new_currency_unit_path, class: "btn btn-primary btn-sm" %>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark" style="font-size: 14px">
    <tr style="font-size: 12px">
      <th class="p-1 m-1">Id</th>
      <th class="p-1 m-1">Country</th>
      <th class="p-1 m-1">Unit name en</th>
      <th class="p-1 m-1">Unit name pl</th>
      <th class="p-1 m-1">Cod</th>
      <th class="p-1 m-1">Unit</th>
      <th class="p-1 m-1">Unit format</th>
      <th class="p-1 m-1">Status</th>
      <th class="p-1 m-1">Description</th>
      <th class="p-1 m-1" colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @currency_units.each do |currency_unit| %>
      <tr style="font-size: 12px">
        <td class="p-1 m-1"><%= currency_unit.id %></td>
        <td class="p-1 m-1"><%= currency_unit.country.country_en %></td>
        <td class="p-1 m-1"><%= currency_unit.unit_name_en %></td>
        <td class="p-1 m-1"><%= currency_unit.unit_name_pl %></td>
        <td class="p-1 m-1"><%= currency_unit.cod %></td>
        <td class="p-1 m-1"><%= currency_unit.unit %></td>
        <td class="p-1 m-1"><%= currency_unit.unit_format %></td>
        <td class="p-1 m-1"><%= currency_unit.status %></td>
        <td class="p-1 m-1"><%= currency_unit.description %></td>
        <td class="p-1 m-1" style = "width: 56px">
          <%= link_to render('renders/button_show_small_icon'), currency_unit,{class:"btn btn-info btn-vsm", 'data-toggle' => "modal", 'data-target' => "#" + "CU"+ currency_unit.id.to_s} %>
          <div class="modal fade" id=<%= "CU" + currency_unit.id.to_s %> data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <%= render 'show_modal', currency_unit: currency_unit%>
          </div>
          <%= link_to render('renders/button_edit_small_icon'), edit_currency_unit_path(currency_unit), class: "btn btn-primary btn-vsm" %>
        </td>
        <td class="p-1 m-1">
          <%= link_to render('renders/button_delete_small_icon'), currency_unit, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-vsm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
